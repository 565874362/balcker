<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_dp_46"
        android:layout_marginBottom="@dimen/dimen_dp_46"
        android:scaleType="centerCrop"
        android:src="@drawable/submit" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_dp_16"
        android:layout_marginEnd="@dimen/dimen_dp_16"
        android:layout_marginBottom="@dimen/dimen_dp_46"
        android:text="您的病情信息已经成功提交，吖吖医生将把您的病情信息推送给以下医生，请及时关注系统提示。"
        android:textColor="@color/color_gray_dark_91939f"
        android:textSize="@dimen/text_size_14sp" />

</LinearLayout>