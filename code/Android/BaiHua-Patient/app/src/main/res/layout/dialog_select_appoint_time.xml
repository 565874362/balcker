<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/dialog_tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="请选择就诊时间"
            android:textColor="@color/color_black_dark_4b5764"
            android:textSize="@dimen/text_size_16sp" />

        <ImageView
            android:id="@+id/dialog_iv_close"
            android:layout_width="@dimen/dimen_dp_28"
            android:layout_height="@dimen/dimen_dp_28"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:src="@drawable/shut_down" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_dp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_for_registered_time_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上午"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/dialog_tv_m_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_24"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_14sp"
                tools:text="有" />

            <TextView
                android:id="@+id/dialog_tv_m_registered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_24"
                android:background="@drawable/shape_for_registered_bg"
                android:text="挂号"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_14sp"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_2"
            android:background="#F1F1F3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下午"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/dialog_tv_a_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_24"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_14sp"
                tools:text="有" />

            <TextView
                android:id="@+id/dialog_tv_a_registered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_24"
                android:background="@drawable/shape_for_registered_bg"
                android:text="挂号"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_14sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>