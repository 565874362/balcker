<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/my_ll_patient_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_iv_avatar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_dp_16"
                android:layout_marginBottom="@dimen/dimen_dp_16"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_ll_visiting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_dp_16"
            android:paddingEnd="@dimen/dimen_dp_16">

            <ImageView
                android:layout_width="@dimen/dimen_dp_24"
                android:layout_height="@dimen/dimen_dp_24"
                android:scaleType="centerInside"
                android:src="@drawable/visits" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_12"
                android:layout_weight="1"
                android:text="我的问诊"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_ll_my_registered"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_dp_1"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_dp_16"
            android:paddingEnd="@dimen/dimen_dp_16">

            <ImageView
                android:layout_width="@dimen/dimen_dp_24"
                android:layout_height="@dimen/dimen_dp_24"
                android:scaleType="centerInside"
                android:src="@drawable/accepts" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_12"
                android:layout_weight="1"
                android:text="我的挂号"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_ll_ask_and_answer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_dp_1"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_dp_16"
            android:paddingEnd="@dimen/dimen_dp_16">

            <ImageView
                android:layout_width="@dimen/dimen_dp_24"
                android:layout_height="@dimen/dimen_dp_24"
                android:scaleType="centerInside"
                android:src="@drawable/consulting_green" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_12"
                android:layout_weight="1"
                android:text="我的问答"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/my_tv_exit_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_44"
            android:layout_marginStart="@dimen/dimen_dp_8"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="@dimen/dimen_dp_8"
            android:layout_marginBottom="@dimen/dimen_dp_16"
            android:background="@drawable/shape_for_blue_button_bg"
            android:gravity="center"
            android:text="退出当前账户"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_18sp" />

    </LinearLayout>


</ScrollView>