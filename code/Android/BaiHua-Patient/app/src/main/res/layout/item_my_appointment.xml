<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_50"
        android:background="@android:color/white"
        android:paddingStart="@dimen/dimen_dp_12"
        android:paddingTop="@dimen/dimen_dp_16"
        android:paddingEnd="@dimen/dimen_dp_12">

        <TextView
            android:id="@+id/item_my_appointment_tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black_dark_4b5764"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"
            tools:text="令狐小影" />

        <TextView
            android:id="@+id/item_tv_doctor_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_my_appointment_tv_doctor_name"
            android:layout_toEndOf="@+id/item_my_appointment_tv_doctor_name"
            android:textColor="@color/color_black_dark_4b5764"
            android:textSize="@dimen/text_size_14sp"
            tools:text="（儿科）" />

        <TextView
            android:id="@+id/item_my_appointment_tv_doctor_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/color_red_light_f8f8f9"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"
            tools:text="20.00元" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_1"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_16"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="就诊时间"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/item_my_appointment_visiting_tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="2018-12-06 周四 下午" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_16"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="患者姓名"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/item_my_appointment_visiting_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="令狐小影" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_16"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:layout_marginBottom="@dimen/dimen_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="年龄"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/item_my_appointment_visiting_tv_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="5岁" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>