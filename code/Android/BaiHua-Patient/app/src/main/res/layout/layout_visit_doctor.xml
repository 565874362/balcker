<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_dp_16">

    <ImageView
        android:id="@+id/layout_visit_iv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_dp_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="就诊科室"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/layout_visit_tv_department"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="儿科" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_dp_12"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="就诊医生"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/layout_visit_tv_doctor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="令狐小影" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_dp_12"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="预约费"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/layout_visit_tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_red_light_f8f8f9"
                android:textSize="@dimen/text_size_16sp"
                tools:text="20.0元" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>