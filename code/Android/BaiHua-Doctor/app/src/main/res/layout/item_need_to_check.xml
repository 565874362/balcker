<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_check_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimen_dp_50"
        android:paddingStart="@dimen/dimen_dp_16"
        android:paddingEnd="@dimen/dimen_dp_16"
        android:textColor="@color/color_black_dark_4b5764"
        android:textSize="@dimen/text_size_16sp"
        tools:text="口腔检查" />

    <TextView
        android:id="@+id/item_check_tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimen_dp_50"
        android:paddingStart="@dimen/dimen_dp_16"
        android:paddingEnd="@dimen/dimen_dp_16"
        android:textColor="@color/color_black_dark_4b5764"
        android:textSize="@dimen/text_size_16sp"
        tools:text="25.00元" />

</LinearLayout>