<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/common_title_bar"
    style="@style/common_title_bar">

    <ImageButton
        android:id="@+id/left"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="@dimen/dimen_dp_12"
        android:layout_marginEnd="@dimen/dimen_dp_12"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_white" />

    <TextView
        android:id="@+id/title"
        style="@style/activity_title_text"
        android:maxLength="15"
        android:text="" />

    <TextView
        android:id="@+id/right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_mid_text"
        android:visibility="invisible"
        tools:text="菜单" />

    <ImageView
        android:id="@+id/right_ib_left"
        android:layout_width="@dimen/dimen_dp_24"
        android:layout_height="@dimen/dimen_dp_24"
        android:layout_gravity="end|center_vertical"
        android:layout_marginStart="@dimen/dimen_dp_16"
        android:layout_marginEnd="@dimen/dimen_dp_16"
        android:background="@null"
        android:visibility="invisible"
        tools:text="编辑" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="@dimen/dimen_dp_24"
        android:layout_height="@dimen/dimen_dp_24"
        android:layout_gravity="end|center_vertical"
        android:layout_marginStart="@dimen/dimen_dp_10"
        android:layout_marginEnd="@dimen/dimen_dp_10"
        android:background="@null"
        android:visibility="invisible"
        tools:text="菜单1" />

    <TextView
        android:id="@+id/common_tv_right_num"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textSize="12sp"
        android:visibility="invisible"
        tools:text="1" />

</FrameLayout>