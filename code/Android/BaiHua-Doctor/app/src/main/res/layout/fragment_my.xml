<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/my_ll_patient_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_bj"
            android:gravity="center|center_vertical"
            android:orientation="vertical">

            <View
                android:id="@+id/fake_statusbar_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/statusbar_view_height"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:text="我的中心"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/my_iv_avatar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_dp_6"
                android:scaleType="centerCrop"
                android:src="@color/colorPrimary" />

            <TextView
                android:id="@+id/my_tv_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_dp_16"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_16sp"
                tools:text="医生名字" />

            <TextView
                android:id="@+id/my_tv_doctor_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_dp_12"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_14sp"
                tools:text="主任医生  |  儿科" />

            <TextView
                android:id="@+id/my_tv_doctor_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_dp_12"
                android:layout_marginBottom="@dimen/dimen_dp_24"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_14sp"
                tools:text="等级" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_ll_patient_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_dp_16"
            android:paddingEnd="@dimen/dimen_dp_16">

            <ImageView
                android:layout_width="@dimen/dimen_dp_24"
                android:layout_height="@dimen/dimen_dp_24"
                android:scaleType="centerInside"
                android:src="@drawable/visits" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_12"
                android:layout_weight="1"
                android:text="患者信息"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_ll_my_visiting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_dp_1"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_dp_16"
            android:paddingEnd="@dimen/dimen_dp_16">

            <ImageView
                android:layout_width="@dimen/dimen_dp_24"
                android:layout_height="@dimen/dimen_dp_24"
                android:scaleType="centerInside"
                android:src="@drawable/accepts" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_12"
                android:layout_weight="1"
                android:text="我的接诊"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_ll_visiting_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_dp_1"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_dp_16"
            android:paddingEnd="@dimen/dimen_dp_16">

            <ImageView
                android:layout_width="@dimen/dimen_dp_24"
                android:layout_height="@dimen/dimen_dp_24"
                android:scaleType="centerInside"
                android:src="@drawable/schedule" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_12"
                android:layout_weight="1"
                android:text="接诊时间"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_ll_my_information"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dimen_dp_16"
            android:paddingEnd="@dimen/dimen_dp_16">

            <ImageView
                android:layout_width="@dimen/dimen_dp_24"
                android:layout_height="@dimen/dimen_dp_24"
                android:scaleType="centerInside"
                android:src="@drawable/personal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_12"
                android:layout_weight="1"
                android:text="我的信息"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_keyboard_arrow_right_gray_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/my_tv_exit_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_44"
            android:layout_marginStart="@dimen/dimen_dp_8"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/dimen_dp_8"
            android:layout_marginBottom="@dimen/dimen_dp_16"
            android:background="@drawable/shape_for_blue_button_bg"
            android:gravity="center"
            android:text="退出当前账户"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_18sp"
            android:visibility="gone" />

    </LinearLayout>


</ScrollView>