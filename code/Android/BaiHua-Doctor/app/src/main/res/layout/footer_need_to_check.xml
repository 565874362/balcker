<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="end"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dimen_dp_16"
    android:paddingEnd="@dimen/dimen_dp_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_dp_10"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimen_dp_50"
        android:text="预估费用合计"
        android:textColor="@color/color_black_dark_4b5764"
        android:textSize="@dimen/text_size_16sp" />

    <TextView
        android:id="@+id/footer_check_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimen_dp_50"
        android:textColor="@color/color_red_light_f8f8f9"
        android:textSize="@dimen/text_size_18sp"
        tools:text="25.00元" />

</LinearLayout>