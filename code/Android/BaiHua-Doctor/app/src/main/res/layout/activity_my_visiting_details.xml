<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_dp_12"
        android:paddingTop="@dimen/dimen_dp_16"
        android:paddingEnd="@dimen/dimen_dp_12"
        android:paddingBottom="@dimen/dimen_dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="患者信息"
            android:textColor="@color/color_black_dark_4b5764"
            android:textSize="@dimen/text_size_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_16"
            android:layout_marginTop="@dimen/dimen_dp_22"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="患者姓名"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/visiting_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="令狐小影" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_16"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="年龄"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/visiting_tv_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="5岁" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_16"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="性别"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/visiting_tv_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="男" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_16"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="联系电话"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/visiting_tv_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="134xxxx0876" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_16"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:layout_marginBottom="@dimen/dimen_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="接诊时间"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/visiting_tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="2018-12-06 周四 下午" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_dp_10"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_dp_12"
        android:paddingTop="@dimen/dimen_dp_16"
        android:paddingEnd="@dimen/dimen_dp_12"
        android:paddingBottom="@dimen/dimen_dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付信息"
            android:textColor="@color/color_black_dark_4b5764"
            android:textSize="@dimen/text_size_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_16"
            android:layout_marginTop="@dimen/dimen_dp_22"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支付方式"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/visiting_tv_pay_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="微信支付" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_16"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支付金额"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/visiting_tv_pay_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_red_light_f8f8f9"
                android:textSize="@dimen/text_size_16sp"
                tools:text="20.00元" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_16"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_16"
            android:layout_marginBottom="@dimen/dimen_dp_16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支付时间"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/visiting_tv_pay_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_16sp"
                tools:text="2018-12-06 15:25:30" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>