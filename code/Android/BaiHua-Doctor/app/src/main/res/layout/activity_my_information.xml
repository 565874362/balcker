<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my_info_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_info_image"
            android:layout_marginStart="@dimen/dimen_dp_10"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="@dimen/dimen_dp_10"
            android:background="@drawable/shape_for_my_info_bg"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_dp_10"
            android:paddingTop="@dimen/dimen_dp_16"
            android:paddingEnd="@dimen/dimen_dp_10"
            android:paddingBottom="@dimen/dimen_dp_22">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/my_info_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black_dark_4b5764"
                    android:textSize="@dimen/text_size_16sp"
                    tools:text="令狐小影" />

                <TextView
                    android:id="@+id/my_info_tv_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/my_info_tv_name"
                    android:layout_marginStart="@dimen/dimen_dp_10"
                    android:layout_toEndOf="@+id/my_info_tv_name"
                    android:textColor="@color/color_black_dark_4b5764"
                    android:textSize="@dimen/text_size_14sp"
                    tools:text="主任医师" />

                <TextView
                    android:id="@+id/my_info_tv_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/dimen_dp_10"
                    android:textColor="@color/color_black_dark_4b5764"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold"
                    tools:text="儿科" />

            </RelativeLayout>

            <TextView
                android:id="@+id/my_info_tv_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_12"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_14sp"
                tools:text="西安儿童医院" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_16"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_14sp"
                android:text="擅长：" />

            <TextView
                android:id="@+id/my_info_tv_good_at_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_16"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp"
                tools:text="咳嗽：过敏性咳嗽（咳嗽变异小船）、反复咳嗽不与、慢性咳嗽等。" />

            <TextView
                android:id="@+id/my_info_tv_good_at_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_16"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp"
                tools:text="咳嗽：过敏性咳嗽（咳嗽变异小船）、反复咳嗽不与、慢性咳嗽等。" />

            <TextView
                android:id="@+id/my_info_tv_good_at_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_16"
                android:textColor="@color/color_gray_light_afb1bd"
                android:textSize="@dimen/text_size_14sp"
                tools:text="咳嗽：过敏性咳嗽（咳嗽变异小船）、反复咳嗽不与、慢性咳嗽等。" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_16"
                android:text="医生资格证"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_14sp" />

            <ImageView
                android:id="@+id/my_info_iv_doctor_certificate"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dimen_dp_16"
                android:scaleType="centerCrop"
                android:src="@color/windowBackground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_16"
                android:text="身份证图片"
                android:textColor="@color/color_black_dark_4b5764"
                android:textSize="@dimen/text_size_14sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_16">

                <ImageView
                    android:id="@+id/my_info_iv_front_photo"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@color/windowBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_dp_16"
                    android:text="正面照"
                    android:textColor="@color/color_black_dark_4b5764"
                    android:textSize="@dimen/text_size_14sp" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_16">

                <ImageView
                    android:id="@+id/my_info_iv_reverse_photo"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@color/windowBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="反面照"
                    android:textColor="@color/color_black_dark_4b5764"
                    android:textSize="@dimen/text_size_14sp" />

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>