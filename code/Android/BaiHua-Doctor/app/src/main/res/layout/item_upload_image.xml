<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_upload_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pic" />

    <ImageView
        android:id="@+id/item_upload_cancel"
        android:layout_width="@dimen/dimen_dp_16"
        android:layout_height="@dimen/dimen_dp_16"
        android:layout_alignTop="@+id/item_upload_image"
        android:layout_alignEnd="@+id/item_upload_image"
        android:src="@drawable/shut_down" />

</RelativeLayout>